# --------------------------------------------------------------------
# [ENV 설정] development / integration / production
# --------------------------------------------------------------------
ENV=development

# API
API_HOST=0.0.0.0
API_PORT=8010
LOG_LEVEL=INFO

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB_SESS=1
REDIS_PASSWORD=redis

# Postgres + pgvector
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DATABASE=chatbot
POSTGRES_USER=chatbot
POSTGRES_PASSWORD=chatbot
POSTGRES_SCHEME=postgresql+asyncpg

#DB 초기화 설정 recreate/keep
DB_SET=recreate 

OS_SCHEME=http
OS_HOST=opensearch
OS_PORT=9200
OS_INDEX=rag_chunks

# LLM/Embeddings
MODEL_PROVIDER=openai
MODEL_NAME=gpt-4o-mini 
EMBEDDING_MODEL=upskyy/bge-m3-korean
OPENAI_API_KEY="your-key"

# ai-models 아직 안씀 사실 지워도 됨
MODEL_SEVER_IP=host.docker.internal

# Prompt Policy (모델 입력/출력 예산)
PROMPT_BUDGET=6000   # 전체 프롬프트 예산 (token 단위)
REPLY_RESERVE=500    # 모델 '출력'을 위해 남겨둘 예산 (잘림 방지용)
HISTORY_RATIO=0.7    # 남은 입력 예산 중 '과거 대화'에 배정할 비율 (0.0~1.0)
